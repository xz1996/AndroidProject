<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/avatar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.activity.forum.ForumActivity"
            android:label="@string/title_activity_forum" >
        </activity>
        <activity android:name="com.activity.forum.DetailActivity" >
        </activity>
        <activity
            android:name="com.activity.usersdb.UsersDBActivity"
            android:label="@string/title_activity_users_db" >
        </activity>
        <activity
            android:name="com.activity.usersdb.UpdateUdbActivity"
            android:label="@string/title_activity_update_udb"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
     <uses-permission android:name="android.permission.INTERNET" />
    
    <!--允许应用程序访问有关的网络信息-->    
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>    
	    
	<!--允许应用程序访问WIFI网卡的网络信息-->    
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

</manifest>
